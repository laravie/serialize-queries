{
    "name": "laravie/serialize-queries",
    "description": "Serializable Laravel Query Builder",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Laravie\\SerializesQuery\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Laravie\\SerializesQuery\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/database": "^10.4 || ^11.0",
        "illuminate/queue": "^10.4 || ^11.0",
        "laravel/serializable-closure": "^1.3"
    },
    "require-dev": {
        "laravel/pint": "^1.4",
        "orchestra/testbench": "^8.13 || ^9.0",
        "phpstan/phpstan": "^1.10.5",
        "phpunit/phpunit": "^10.1"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-next": "3.x-dev"
        }
    },
    "scripts": {
        "ci": [
            "@composer audit",
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ],
        "test": "@php vendor/bin/phpunit -c ./ --color"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
